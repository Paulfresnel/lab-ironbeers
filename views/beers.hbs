
<div id="main-container">
{{#each beer}}
    <div class="beer-card">
        <div id="image">
        <img src='{{this.image_url}}'>
        </div>
        <div class="flexy">
            <h1>{{this.name}}</h1>
            <p class="tagline">"{{this.tagline}}"</p>
            <p class="description">{{this.description}}</p>
        </div>
        
    </div>
    {{/each}}
    </div>